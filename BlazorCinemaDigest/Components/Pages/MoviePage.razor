@page "/movie/{idParam}"
@using BlazorCinemaDigest.ApiRequest.Model
@using BlazorCinemaDigest.ApiRequest
@inject MovieApiService MovieApi

@code {
	[Parameter]
	public string idParam { get; set; } 

	private int id;
	private Movie movie;

	protected override async Task OnParametersSetAsync()
	{
		if (int.TryParse(idParam, out id) && id > 0)
		{
			movie = await MovieApi.GetMovieById(id);
		}
		else
		{
			movie = null;
		}
	}
}

@if (movie != null)
{
	<div class="movie-page-container">
		<div class="movie-header" style="background-image: url('@movie.image');">
			<div class="overlay"></div>
			<div class="movie-info">
				<h1 class="movie-title">@movie.name</h1>
				<p class="movie-rating">★ @movie.rating</p>
				<button class="watch-button">Смотреть сейчас</button>

			</div>
		</div>
		<div class="movie-content">
			<div class="movie-details">
				<img src="@movie.image" alt="@movie.name" class="movie-poster" />
				<div class="movie-info-block">
					<p><strong>Название:</strong> @movie.name</p>
					<p><strong>Жанр:</strong> @movie.Genre.name</p>
					<p><strong>Год выхода:</strong> @movie.releaseYear</p>
					<p><strong>Продолжительность:</strong> @movie.duration.Hours ч @movie.duration.Minutes мин</p>
				</div>
			</div>
			<div class="movie-description">
				<h2>Описание</h2>
				<p>@movie.description</p>
			</div>
		</div>
	</div>
}
else
{
	<div class="alert alert-warning">Фильм не найден</div>
}
<style>
	/* Стили для страницы фильма */
	.movie-page-container {
		font-family: Arial, sans-serif;
		color: #333;
		background-color: #f8f9fa;
		padding: 20px;
	}

	.movie-header {
		position: relative;
		height: 500px;
		background-size: cover;
		background-position: center;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #fff;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.9));
	}

	.movie-info {
		position: relative;
		z-index: 1;
		text-align: center;
	}

	.movie-title {
		font-size: 3rem;
		margin: 0;
	}

	.movie-rating {
		font-size: 2rem;
		color: gold;
	}

	.movie-content {
		margin-top: 20px;
		padding: 20px;
		background: white;
		border-radius: 10px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

	}

	.watch-button {
		padding: 15px 30px;
		background: #0d6efd;
		color: #fff;
		border: none;
		border-radius: 5px;
		font-size: 1.2rem;
		cursor: pointer;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

		.watch-button:hover {
