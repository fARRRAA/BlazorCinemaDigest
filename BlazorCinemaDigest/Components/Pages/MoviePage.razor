	}

	.movie-poster {
		width: 200px;
		height: 300px;
		object-fit: cover;
		border-radius: 10px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.movie-info-block p {
		margin: 5px 0;
		font-size: 1.1rem;
	}

	.movie-description {
		margin-top: 20px;
	}

		.movie-description h2 {
			font-size: 2rem;
			margin-bottom: 10px;
		}

		.movie-description p {
			font-size: 1.1rem;
			line-height: 1.6;
		}
</style>